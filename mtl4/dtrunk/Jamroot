import modules ;
import os ;
import path ;

import mtl4 ;
import build-system ;

path-constant mtl4-css : default.css ;

.bootstrap-dir = [ build-system.location ] ;
ECHO .bootstrap-dir= $(.bootstrap-dir) ;
.boost = [ path.join $(.bootstrap-dir) ../../.. ] ;
ECHO .boost= $(.boost) ;
.boost = [ path.native $(.boost) ] ;
ECHO .boost= $(.boost) ;

# If someone sets BUILD_DIR in boost-build.jam, use that.
.build-dir = [ modules.peek : BUILD_DIR ] ;
if $(.build-dir)
{
    .build-dir = build-dir $(.build-dir) ;
}

use-project /boost : $(.boost) ;

project mtl4
  : requirements <include>. <source>/boost//headers 
    : $(.build-dir)
  ;
   
build-project libs/sequence/test ;
build-project libs/property_map/test ;

# build-project libs/sequence/doc ;

