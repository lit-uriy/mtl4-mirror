import boostbook ;
import docutils ;
import mtl4 ;

.sources = [ glob *.rst ] ;
.bases = [ MATCH (.*)\.rst$ : $(.sources) ] ;

for src in $(.bases)
{
    html $(src) : $(src).rst : 
      <docutils-html>"-gdt --traceback --trim-footnote-reference-space  --embed-stylesheet --stylesheet-path=default.css" 
      ;
}

alias htmls : $(.bases) ;
stage html : $(.bases) ;


