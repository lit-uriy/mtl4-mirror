import boostbook ;
import docutils ;
import mtl4 ;

.sources = [ glob *.rst ] ;
.bases = [ MATCH (.*)\.rst$ : $(.sources) ] ;

for src in $(.bases)
{
    html $(src) : $(src).rst ;
}

mtl4-uploaded upload : $(.bases) ;
alias html : $(.bases) ;

# stage html : [ MATCH $(.target-pat) : $(.sources) ] ;

