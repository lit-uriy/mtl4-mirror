import modules ;
import os ;
import path ;

import mtl4 ;
import build-system ;

path-constant mtl4-css : default.css ;

.build-system-dir = [ build-system.location ] ;
.boost = [ path.native [ path.join $(.build-system-dir) ../../.. ] ] ;

# If someone sets BUILD_DIR in boost-build.jam, use that.
.build-dir = [ modules.peek : BUILD_DIR ] ;
if $(.build-dir)
{
    .build-dir = build-dir $(.build-dir) ;
}

use-project /boost : $(.boost) ;

project mtl4
  : requirements <include>. <source>/boost//headers 
    : $(.build-dir)
  ;

.test-jamfiles = [ path.glob libs : */test/Jamfile ] ;
ECHO test projects: $(.test-jamfiles:D) ;
alias test : $(.test-jamfiles:D) ;
explicit test ;

